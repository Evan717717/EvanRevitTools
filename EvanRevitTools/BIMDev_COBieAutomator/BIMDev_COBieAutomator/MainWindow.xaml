<Window x:Class="BIMDev_COBieAutomator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="COBie 自動化導入工具 - BIM Development" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="1. 選擇 Excel 來源 (B表)" Grid.Column="0" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button Name="BtnSelectFolder" Content="📂 選擇資料夾..." Height="25" Margin="5" Click="BtnSelectFolder_Click" />

                <ListBox Name="ListExcelFiles" Grid.Row="1" Margin="5"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="全選" Width="50" Margin="0,0,5,0" Click="BtnSelectAll_Click"/>
                    <Button Content="全不選" Width="50" Click="BtnUnselectAll_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <Grid Grid.Column="1" Margin="5,0,0,0">
            <TabControl>

                <TabItem Header="👤 當前模型">
                    <StackPanel Margin="5">
                        <GroupBox Header="目標模型資訊" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <TextBlock Text="目前連接模型：" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="TxtModelName" Text="尚未讀取" TextWrapping="Wrap" Foreground="Blue" Margin="0,0,0,10"/>
                                <TextBlock Text="此模式將直接對目前開啟的 Revit 視窗進行修改。" Foreground="Gray" FontSize="10" TextWrapping="Wrap"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="寫入設定">
                            <StackPanel Margin="5">
                                <RadioButton Name="RbOnlyFillBlank" Content="僅寫入空白參數 (保留既有值)" IsChecked="True" Margin="0,5"/>
                                <RadioButton Name="RbForceOverwrite" Content="強制覆蓋現有值" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <Button Name="BtnRun" Content="🚀 執行導入 (當前模型)" Height="40" Margin="0,20,0,0" Click="BtnRun_Click"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="📚 批次處理">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <GroupBox Header="1. 前置作業：建立參數 (選填)" Grid.Row="0" Margin="0,0,0,5">
                            <StackPanel Margin="5">
                                <CheckBox Name="CbRunParamCreation" Content="執行前先建立 COBie 參數" Margin="0,0,0,5" Checked="CbRunParamCreation_CheckedChanged" Unchecked="CbRunParamCreation_CheckedChanged"/>
                                <Grid Name="GridParamSettings" IsEnabled="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TxtSharedParamPath_Batch" IsReadOnly="True" Height="23" Text="請選擇共用參數檔 (.txt)..." Foreground="Gray"/>
                                    <Button Name="BtnSelectSPFile" Content="瀏覽..." Grid.Column="1" Width="50" Margin="5,0,0,0" Click="BtnSelectSPFile_Click"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Name="PanelParamOpts" IsEnabled="False">
                                    <TextBlock Text="群組:" VerticalAlignment="Center"/>
                                    <ComboBox Name="CmbGroups_Batch" Width="100" Margin="5,0,10,0" Height="22"/>
                                    <CheckBox Name="CbVary_Batch" Content="Vary by Group" IsChecked="True" VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="2. 選擇目標 Revit 模型資料夾" Grid.Row="1">
                            <StackPanel Margin="5">
                                <Button Content="📂 瀏覽資料夾..." Click="BtnSelectRvtFolder_Click" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="待處理模型清單" Grid.Row="2" Margin="0,5">
                            <ListBox Name="ListRvtFiles" Margin="2"/>
                        </GroupBox>

                        <StackPanel Grid.Row="3">
                            <TextBlock Text="⚠️ 注意：程式將在背景開啟、修改並儲存檔案。" Foreground="Red" FontSize="10" Margin="0,5"/>
                            <Button Name="BtnBatchRun" Content="📦 執行批次全自動作業" Height="40" Background="#FFF0F0" FontWeight="Bold" Click="BtnBatchRun_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>